{% extends 'base.html.twig' %}

{% block title %}Enregistrement
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1>Enregistrement</h1>

	{{ form_start(registrationForm) }}
	form_label
	<div class="form-group">
		<fieldset disabled="">
			<label class="form-label" for="disabledInput">{{ form_label(registrationForm.email) }}</label>
			{# {{ form_row(registrationForm.email) }} #}
			<input class="form-control" id="disabledInput" type="text" placeholder="courriel" disabled="">
		</fieldset>
	</div>

	<div class="form-group">
		<fieldset disabled="">
			<label class="form-label" for="disabledInput">Mot de passe</label>
			{#	{{ form_row(registrationForm.plainPassword) }}} #}
			<input class="form-control" id="disabledInput" type="password" placeholder="mot de passe" disabled="">
		</fieldset>
	</div>

	<div class="form-check">

		<label class="form-check-label" for="flexCheckDefault">

			Acceptez les conditions d'utilisation
		</label>

		<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">

	</div>

	{#	{{ form_row(registrationForm.agreeTerms) }} #}


	<button type="submit" class="btn btn-primary">Enregistrement</button>
	{#	{{ form_end(registrationForm) }} #}
{% endblock %}
